<h1>Create a new Book</h1>

{{!-- views/books/book-create.hbs --}}

<h2>Create a book</h2>

<form action="/books/create" method="post">

  <label> Title:
    <input type="text" name="title" value="El principito" />
  </label>

  <label> Author:
    <input type="text" name="author" value="Antoine de Saint-Exupery" />
  </label>

  <label> Description:
    <textarea name="description" cols="30" rows="4">Un muy buen libro</textarea>
  </label>

  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="10" />
  </label>

  <button type="submit"> Create </button>
</form>
